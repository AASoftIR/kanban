@startuml ActivityDiagram
skinparam monochrome true
skinparam shadowing false
skinparam BackgroundColor white
skinparam DefaultFontName Arial

start

if (Input method?) then (Location)
    :Enter Location;
else (JSON)
    :Upload JSON Data;
endif

:Validate Input;

if (Valid?) then (yes)
    :Fetch Current Weather;
    :Fetch Historical Data;
    :Analyze Trends;
    :Generate Forecast;
    :Store Results in DB;
    :Display Forecast;
    stop
else (no)
    :Show Error Message;
    :Return to Input;
    stop
endif

@enduml