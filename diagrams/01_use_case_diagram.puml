
@startuml UseCase
' Rational Rose-like styling (classic UML look)
skinparam monochrome true
skinparam shadowing false
skinparam BackgroundColor white
skinparam DefaultFontName Arial
skinparam PackageStyle rectangle

left to right direction

actor User

rectangle "Galaxy Weather System" {
    usecase "Enter Location" as UC_EnterLocation
    usecase "Upload JSON Data" as UC_UploadJson
    usecase "Request Forecast" as UC_RequestForecast
    usecase "View Forecast Result" as UC_ViewForecast
    usecase "View Forecast History" as UC_ViewHistory
}

User --> UC_EnterLocation
User --> UC_UploadJson
User --> UC_RequestForecast
User --> UC_ViewForecast
User --> UC_ViewHistory

UC_RequestForecast ..> UC_EnterLocation : <<include>>
UC_RequestForecast ..> UC_ViewForecast : <<include>>

@enduml
